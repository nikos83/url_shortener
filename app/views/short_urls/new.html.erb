<h1 class="text-2xl font-bold mb-6">Create a New Short URL</h1>

<%= form_with model: @short_url, local: true, class: "space-y-6" do |form| %>
  <div>
    <%= form.label :original_url, "Original URL", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :original_url, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Enter the original URL" %>
  </div>

  <div class="flex justify-between items-center">
    <%= link_to 'Back', short_urls_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    <%= form.submit "Create Short URL", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
